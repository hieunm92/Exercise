create database exercise;
create table classes (id int, language varchar(250),description varchar(255));
create table student (id int, fullname varchar(255), address_id int , phone int unique, class_id int);
create  table address (id int, address varchar(255));
create table course (id int, name varchar(255), description varchar(255));
create table point(id int, course_id int, student_id int, point int);
alter table classes add primary key (id);
alter table student add foreign key (class_id) references classes (id);
alter table address add primary key (id);
alter table student add foreign key (address_id) references address(id);
alter table student add primary key (id);
alter table course add primary key (id);
alter table point add foreign key (student_id) references student(id);
alter table point add foreign key (course_id) references course(id);
