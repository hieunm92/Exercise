select language, count(s.id) as 'so luong hoc vien moi lop' from classes join student s on classes.id = s.class_id group by classes.id;
select address,count(s.id) from address join student s on address.id = s.address_id group by address_id;
select course_id, avg(point) as 'Diem trung binh cac mon' from point join course c on point.course_id = c.id group by course_id;
